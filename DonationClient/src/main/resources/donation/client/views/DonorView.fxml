                                          <FontAwesomeIconView fill="WHITE" glyphName="FILE_TEXT" size="25" />
                                       </children>
                                    </StackPane>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </JFXButton>
                              <JFXButton prefHeight="17.0" prefWidth="284.0" styleClass="menu-button" text="Personal Profile">
                                 <graphic>
                                    <StackPane>
                                       <children>
                                          <Rectangle fill="#282828" height="45.0" stroke="#282828" strokeType="INSIDE" width="60.0" />
                                          <FontAwesomeIconView fill="WHITE" glyphName="USER" size="25" />
                                       </children>
                                    </StackPane>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
